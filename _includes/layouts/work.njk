---
layout: layouts/base.njk
---

<main data-barba="container" data-barba-namespace="work" class="gsap-container xh-screen xoverflow-hidden">
  {% include "partials/header.njk" %}

  <div class="fixed z-[60] left-1/2 translate-x-[-50%] bottom-0 mb-4 md:mb-8 px-4 w-full md:w-auto flex items-center justify-center">
    <a href="/" class="relative flex items-center justify-center flex-none w-14 h-14 text-white gsap-footer" style="transform: translateY(100px); opacity: 0;">
      <div class="absolute top-0 left-0 flex-none w-14 h-14 rounded-full bg-neutral-800 dark:bg-neutral-700 duration-200 hover:scale-110">

      </div>
      <svg class="relative z-10 pointer-events-none" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>

    </a>
  </div>

  <section class="gsap-content" style="opacity: 0;">


    {# Circle #}
    <div class="sticky top-0 z-10 flex items-center justify-center h-[450px] sm:h-[550px] xl:h-[550px] 2xl:h-[800px] pt-[12vw] sm:pt-0 gsap-hero">
      <div class="relative w-full max-w-[320px] sm:max-w-[384px] lg:max-w-[384px] 2xl:max-w-[600px] aspect-square rounded-tr-full rounded-bl-full rounded-br-full overflow-hidden gsap-circle">
        <div class="w-[100%] h-[100%] rounded-full" style="background-color: {{ bgColor }}"></div>
        <div class="absolute top-0 left-0 max-w-none w-[100%] h-[100%] gsap-circle-card">
          <img src="/assets/img/work/{{ year }}/{{ slug }}/{{ thumbnail }}" class="w-[100%] h-[100%] ml-[8%] mt-[5%] duration-200">
        </div>
      </div>

      
    </div>


    <div class="relative z-40 w-full bg-white dark:bg-[#181818]">
      <div class="grid grid-cols-1 sm:grid-cols-2 px-5 md:px-8 py-8">
        <div class="sm:pr-8">
          <div class="mb-4 text-base text-neutral-400 dark:text-neutral-600 font-medium">
            {{ title }}
          </div>
          <h1 class="text-4xl sm:text-5xl 2xl:text-6xl font-regular mb-8 tracking-tight {{ headingColor }}">
            {{ headline | safe }}
          </h1>
        </div>
        <div>
          <div x-data="{ open: false }">
            <p class="mb-5 last:mb-0 w-full max-w-[600px] 2xl:max-w-[700px] text-neutral-700 dark:text-neutral-500 text-justify text-lg 2xl:text-lg leading-snug font-regular">
              {{ excerpt }}
            </p>

            <a x-show="!open" @click="open = true" class="font-medium text-base 2xl:text-lg text-neutral-700 hover:text-neutral-600 dark:text-neutral-200 dark:hover:text-neutral-300 cursor-pointer">Read more</a>

            <div class="w-full max-w-[600px] 2xl:max-w-[700px] text-neutral-700 dark:text-neutral-500 text-justify text-lg 2xl:text-lg leading-snug font-regular markdown" x-show="open" x-transition.opacity>
              {{ content | safe }}
            </div>
          </div>

          

          <table class="w-full mt-[160px] dark:text-neutral-400 text-xs xl:text-sm">
            <tr>
              <td class="align-top py-3 pr-8 text-neutral-900 dark:text-neutral-400 border-t border-neutral-300 dark:border-neutral-700">Client</td>
              <td class="align-top py-3 text-neutral-500 dark:text-neutral-500 border-t border-neutral-300 dark:border-neutral-700">{{ client }}</td>
            </tr>
            <tr>
              <td class="align-top py-3 pr-8 text-neutral-900 dark:text-neutral-400 border-t border-neutral-300 dark:border-neutral-700">Year</td>
              <td class="align-top py-3 text-neutral-500 dark:text-neutral-500 border-t border-neutral-300 dark:border-neutral-700">{{ year }}</td>
            </tr>
            <tr>
              <td class="align-top py-3 pr-8 text-neutral-900 dark:text-neutral-400 border-t border-neutral-300 dark:border-neutral-700">Discipline</td>
              <td class="align-top py-3 text-neutral-500 dark:text-neutral-500 border-t border-neutral-300 dark:border-neutral-700">{{ discipline }}</td>
            </tr>
            <tr>
              <td class="align-top py-3 pr-8 text-neutral-900 dark:text-neutral-400 border-t border-neutral-300 dark:border-neutral-700">Technology</td>
              <td class="align-top py-3 text-neutral-500 dark:text-neutral-500 border-t border-neutral-300 dark:border-neutral-700">{{ technology }}</td>
            </tr>
          </table>
        </div>
      </div>

      <div class="grid grid-cols-2 gap-1">
        {%- for workImage in workImages -%}
          <div class="relative {% if workImage.col == 2 %}col-span-2{% else %}col-span-2 sm:col-span-1{% endif %} ">
            <div class="absolute top-0 left-0 p-4 text-sm font-medium mix-blend-difference text-white">
              {{ workImage.alt | safe }}
            </div>
            <img src="/assets/img/work/{{ year }}/{{ slug }}/{{ workImage.url }}" class="w-full {% if workImage.col == 2 %}col-span-2 aspect-video{% else %}aspect-[4/3]{% endif %} object-cover">
          </div>
        {%- endfor -%}

      </div>
    </div>
  </section>


</main>